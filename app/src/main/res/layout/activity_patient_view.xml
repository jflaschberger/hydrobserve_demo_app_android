<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="de.tum.mw.ftm.praktikum.androidapp_strohhalm.PatientViewActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_person_black_48dp"
            android:id="@+id/imageView"
            android:elevation="1dp"/>
        <TextView
            android:text="Vorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_txt_detail"
            android:textSize="24sp"
            android:layout_marginStart="25dp"
            android:layout_gravity="center"/>
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surname_txt_detail"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_detail"
            android:layout_gravity="center"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_cake_black_48dp"
                android:id="@+id/imageView4"
                android:elevation="1dp"/>
            <TextView
                android:text="01. Januar 1994"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bdate_txt_detail"
                android:layout_marginStart="25dp"
                android:textSize="22sp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/female_symbol"
            android:id="@+id/image_sex_detail"
            android:layout_gravity="center|end"
            android:layout_marginEnd="5dp"
            android:elevation="1dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_local_drink_black_48dp"
                    android:id="@+id/imageView6"
                    android:elevation="1dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/average_sign"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="34dp"/>
            </FrameLayout>
            <TextView
                android:text="501 ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_drink_ok_detail"
                android:textSize="22sp"
                android:layout_marginStart="21dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/mainGreen"/>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_check_circle_black_48dp"
            android:id="@+id/image_drink_ok_detail"
            android:layout_gravity="end"
            android:elevation="1dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
             <TextView
                 android:text="0 ml"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:id="@+id/txt_vol_yesyesday"
                 android:textSize="16sp"
                 android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                app:srcCompat="@drawable/drink_rec"
                android:id="@+id/image_Drink_yesyesday"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:elevation="1dp"/>
            <TextView
                android:text="Vorgestern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txt_yesyesday"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="0 ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txt_vol_yesday"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                app:srcCompat="@drawable/drink_rec"
                android:id="@+id/image_Drink_yesday"
                android:layout_margin="5dp"
                android:elevation="1dp"/>
            <TextView
                android:text="Gestern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_yesday"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="0 ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txt_vol_today"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                app:srcCompat="@drawable/drink_rec"
                android:id="@+id/image_Drink_today"
                android:layout_margin="5dp"
                android:elevation="1dp"/>
            <TextView
                android:text="Heute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txt_today"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
        <Button
            android:text="Alle Trinkereignisse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_detail"
            android:background="@color/mainCyan"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_weight="1"
            android:elevation="1dp"/>
    </LinearLayout>

</LinearLayout>
